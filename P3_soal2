#include <iostream>

using namespace std;

int main(){
    float panjang,lebar,jari2,luas_segi4,luas_setO,luas_total;

    cout<<"Menghitung luas bangun datar"<<endl;
    cout<<"Panjang   = ";
    cin>>panjang;
    cout<<"Lebar     = ";
    cin>>lebar;
    cout<<"Jari-jari = ";
    cin>>jari2;

    luas_segi4=panjang*lebar;
    luas_setO=3.14*jari2*jari2/2;
    luas_total=luas_segi4+luas_setO;


    cout<<endl<<"----HASIL---"<<endl;
    cout<<"Luas Segi Empat         = "<<luas_segi4<<endl;
    cout<<"Luas Setengah Lingkaran = "<<luas_setO<<endl;
    cout<<"Luas Total              = "<<luas_total<<endl;

return 0;
}
